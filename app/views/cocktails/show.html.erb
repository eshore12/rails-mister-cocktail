<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://source.unsplash.com/9UD0JHnWyVE/1600x900);">
  <div class="banner-btn">
    <%= link_to "Back to Home", cocktails_path(anchor: "all-cocktails"), class: "btn btn-ghost" %>
  </div>
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class=cards>
    <% @cocktail.doses.each do |dose| %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <% if @cocktail.photo.attached? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, resize: :fit %>)">
              <% else %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/771284/1600x900)">
                <% end %>
                <h2><%= dose.ingredient.name %></h2>
              </div>
            </div>
            <div class="flip-card-back">
              <%= link_to dose_path(dose), method: :delete, class: 'card-remove-link', data: { confirm: "Are you sure you want to delete?" } do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
              <%= link_to edit_dose_path(dose), class: 'card-edit-link' do %>
                <i class="far fa-edit"></i>
              <% end %>
              <p><%= dose.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="banner-button">
      <%= link_to "Add Doses", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost" %>
    </div>
  </div>
